{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://variate.ca/definitions/views.json",
    "type": "object",
    "title": "View schema",
    "required": [
        "include",
        "exclude"
    ],
    "properties": {
        "include": {
            "type": "array",
            "items": {
                "type": "string",
                "default": "",
                "examples": [
                    "/$"
                ],
                "pattern": "^(.*)$"
            }
        },
        "exclude": {
            "type": "array",
            "items": {
                "type": "string",
                "default": "",
                "examples": [
                    "/$"
                ],
                "pattern": "^(.*)$"
            }
        }
    }
}
