{
  "name": "variate-config",
  "version": "3.0.0",
  "description": "Variate configuration schema and example",
  "main": "config.json",
  "scripts": {
    "validate": "ajv -r 'src/definitions/**/*.json' -s src/variate.schema.json -d src/variate.json",
    "docs": "jsonschema2md -d src/ -o docs/",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/variateapp/variate-config.git"
  },
  "keywords": [
    "variate",
    "multivariate",
    "ab-testing"
  ],
  "author": "â€œValentin <valentin@whatdafox.com> (http://twitter.com/valentinprngd)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/variateapp/variate-config/issues"
  },
  "homepage": "https://github.com/variateapp/variate-config#readme",
  "devDependencies": {
    "@adobe/jsonschema2md": "^3.1.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "ajv-cli": "^3.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "standard-version": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate && npm run docs && git add docs/"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
